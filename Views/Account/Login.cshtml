@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/style.css" />
    <script src="~/js/script.js"></script>
</head>
<body>
    <div class="header">
        Student <text style="color: rgba(0,0,0,255);"> Board </text>
    </div>

    <div class="container" style="margin-top: 5%;">
        <div style="max-width: 400px; margin: 0 auto; padding: 20px; background-color: white; border-radius: 5px; box-shadow: 0 0 10px rgba(0,0,0,0.1);">
            <h2 style="text-align: center; color: rgba(213,90,132,255); margin-bottom: 30px;">Student Login</h2>

            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div style="color: red; margin-bottom: 15px; text-align: center;">
                    @ViewBag.Error
                </div>
            }

            <form asp-action="Login" asp-controller="Account" method="post">
                <div style="margin-bottom: 20px;">
                    <label for="email" style="display: block; margin-bottom: 5px;">Email:</label>
                    <input type="email" id="email" name="email" required 
                           style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" />
                </div>

                <div style="margin-bottom: 20px;">
                    <label for="password" style="display: block; margin-bottom: 5px;">Password:</label>
                    <input type="password" id="password" name="password" required 
                           style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" />
                </div>

                <input type="hidden" name="role" value="Student" />

                <button type="submit" class="accept-button" style="width: 100%; margin-top: 20px;">
                    Login
                </button>
            </form>
        </div>
    </div>

    <footer>
        <text style="padding-left: 2%;"> Campus </text> 
        <text style="float: right; padding-right: 2%;"> Copyright 2025 </text>
    </footer>
</body>
</html>
