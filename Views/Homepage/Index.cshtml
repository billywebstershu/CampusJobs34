@{
    ViewData["Title"] = "Student Dashboard";
}

<div class="container py-4">
    <div class="row justify-content-center align-items-center">
        <div class="col-12 text-center mb-4">
            <h1 class="display-4">Welcome to the <span class="text-danger">Student</span> <span class="text-dark">Board</span></h1>
            <p class="lead">Manage your campus jobs and timesheets efficiently</p>
        </div>
    </div>

    <div class="row justify-content-center g-4">
        <!-- Quick Access Cards -->
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-clock fa-3x mb-3 text-primary"></i>
                    <h5 class="card-title">Timesheets</h5>
                    <p class="card-text">View and manage your work hours</p>
                    <a href="/TimeSheets" class="btn btn-outline-primary">View Timesheets</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-bell fa-3x mb-3 text-warning"></i>
                    <h5 class="card-title">Notifications</h5>
                    <p class="card-text">Check your latest updates</p>
                    <a href="/Notifications" class="btn btn-outline-warning">View Notifications</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-user fa-3x mb-3 text-success"></i>
                    <h5 class="card-title">Profile</h5>
                    <p class="card-text">Manage your account settings</p>
                    <a href="/Profile" class="btn btn-outline-success">View Profile</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats Section -->
    <div class="row mt-5">
        <div class="col-12">
            <h2 class="text-center mb-4">Quick Overview</h2>
        </div>
        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h3 class="card-title">This Week</h3>
                    <p class="card-text">12 Hours Scheduled</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h3 class="card-title">Pending</h3>
                    <p class="card-text">2 Shift Approvals</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h3 class="card-title">Messages</h3>
                    <p class="card-text">3 Unread</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js" crossorigin="anonymous"></script>
}
