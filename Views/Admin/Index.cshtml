@model CampusJobsProject___Group_34.Models.UserModel

@{
    ViewData["Title"] = "Admin Page";
}

<h1>Admin Page</h1>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<form asp-action="SearchUser" method="post">
    <div class="form-group">
        <label for="userId">Enter User ID:</label>
        <input type="number" id="userId" name="userId" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (Model != null)
{
    <h2>User Information</h2>
    <p><strong>User ID:</strong> @Model.User_ID</p>  @* Fixed: Match with correct property *@
    <p><strong>First Name:</strong> @Model.First_Name</p>  @* Fixed: Match with correct property *@
    <p><strong>Last Name:</strong> @Model.Last_Name</p>  @* Fixed: Match with correct property *@
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Role:</strong> @Model.Role</p>  @* Role is now INT, so it will display properly *@
    <p><strong>Address:</strong> @(string.IsNullOrEmpty(Model.Address) ? "N/A" : Model.Address)</p>  @* Handle NULL Address values *@
}
